<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_ADVANCEDTEMPLATES</name>
	<description>PLG_SYSTEM_ADVANCEDTEMPLATES_DESC</description>
	<version>1.1.7FREE</version>
	<creationDate>September 2014</creationDate>
	<author>NoNumber (Peter van Westen)</author>
	<authorEmail>peter@nonumber.nl</authorEmail>
	<authorUrl>http://www.nonumber.nl</authorUrl>
	<copyright>Copyright Â© 2014 NoNumber All Rights Reserved</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>

	<!-- Files -->
	<files>
		<filename plugin="advancedtemplates">advancedtemplates.php</filename>
		<filename>helper.php</filename>
		<filename>modulehelper.php</filename>
		<filename>index.html</filename>
	</files>

	<!-- Parameters -->
	<config>
		<fields name="params" addfieldpath="/plugins/system/nnframework/fields">
			<fieldset name="description">
				<field name="@loadlanguage_nnframework" type="nn_loadlanguage" extension="plg_system_nnframework" />
				<field name="@loadlanguage" type="nn_loadlanguage" extension="plg_system_advancedtemplates" />
				<field name="@license" type="nn_license" extension="ADVANCED_TEMPLATE_MANAGER" />
				<field name="@version" type="nn_version" extension="ADVANCED_TEMPLATE_MANAGER" />
				<field name="@dependency" type="nn_dependency"
					label="ATP_THE_COMPONENT"
					file="/administrator/components/com_advancedtemplates/advancedtemplates.php" />
				<field name="@header" type="nn_header"
					label="ADVANCED_TEMPLATE_MANAGER"
					description="ADVANCED_TEMPLATE_MANAGER_DESC"
					url="http://www.nonumber.nl/advancedtemplatemanager" />

				<field name="@notice_settings" type="nn_plaintext" label="ATP_SETTINGS" />
			</fieldset>
		</fields>
	</config>
</extension>
